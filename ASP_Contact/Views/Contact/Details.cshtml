@model Contact

<h2>Szczegóły</h2>
<table>
    <tr>
        <th style="padding-left:20px">
            Imie
        </th>
        <th style="padding-left:20px">
            Nazwisko
        </th>
        <th style="padding-left:20px">
            Numer telefonu
        </th>
        <th style="padding-left:20px">
            Email
        </th>    
        <th style="padding-left:20px">
            Data urodzin
        </th>
        <th style="padding-left:20px">
            Priorytet
        </th>
    </tr>
    
        <tr>
            <td style="padding-left:20px">
                @Model.name
            </td>
            <td style="padding-left:20px">
                @Model.surname
            </td>
            <td style="padding-left:20px">
                @Model.phone
            </td>
            <td style="padding-left:20px">
                @Model.email
            </td>
            <td style="padding-left:20px">
                @Model.dateOfBirth.ToString("dd/MM/yyyy")
            </td>
            <td style="padding-left:20px">
                @Model.Priority
            </td>
            <td>
                <a class="btn btn-primary"
                   asp-action="Edit"
                   asp-controller="Contact"
                   asp-route-id=@Model.id>Edytuj</a>
                <a class="btn btn-primary"
                   asp-action="Delete"
                   asp-controller="Contact"
                   asp-route-id=@Model.id
                   onclick="return confirm('Czy na pewno chcesz usunąć ten kontakt?');">Usuń</a>
            </td>
        </tr>
   
</table>