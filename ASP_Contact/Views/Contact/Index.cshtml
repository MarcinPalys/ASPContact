@model Dictionary<int, Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>Lista kontaktów</h2>
<table>
    <tr>
        <th style="padding-left:20px">
            Imie
        </th>
        <th style="padding-left:20px">
            Nazwisko
        </th>
        <th style="padding-left:20px">
            Numer telefonu
        </th>
    </tr>
    @foreach (var item in @Model)
    {
        <tr>
            <td style="padding-left:20px">
                @item.Value.name
            </td>
            <td style="padding-left:20px">
                @item.Value.surname
            </td>
            <td style="padding-left:20px">
                @item.Value.phone
            </td>
            <td>
                <a class="btn btn-primary"
                   asp-action="Edit"
                   asp-controller="Contact"
                   asp-route-id=@item.Value.id>Edytuj</a>
                <a class="btn btn-primary"
                   asp-action="Details"
                   asp-controller="Contact"
                   asp-route-id=@item.Value.id>Szczegóły</a>
                <a class="btn btn-primary"
                   asp-action="Delete"
                   asp-controller="Contact"
                   asp-route-id=@item.Value.id
                   onclick="return confirm('Czy na pewno chcesz usunąć ten kontakt?');">Usuń</a>
            </td>
        </tr>
    }
</table>